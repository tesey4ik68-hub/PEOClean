<Window x:Class="PEOcleanWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PEOcleanWPFApp"
        mc:Ignorable="d"
        Title="Учёт дворников — Управляющая компания" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowState="Normal" ResizeMode="CanResize">
    <Window.Resources>
        <!-- Расплавленный пластик - светлая тема -->
        <LinearGradientBrush x:Key="PrimaryBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#ffffff" Offset="0"/>
            <GradientStop Color="#f8f9fa" Offset="0.3"/>
            <GradientStop Color="#e9ecef" Offset="0.7"/>
            <GradientStop Color="#dee2e6" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SecondaryBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#f1f3f4" Offset="0"/>
            <GradientStop Color="#e8eaed" Offset="0.5"/>
            <GradientStop Color="#dadce0" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="AccentBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#e3f2fd" Offset="0"/>
            <GradientStop Color="#bbdefb" Offset="0.5"/>
            <GradientStop Color="#90caf9" Offset="1"/>
        </LinearGradientBrush>

        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#1976d2"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#424242"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#4caf50"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#f44336"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#bdbdbd"/>

        <!-- Эффекты для пластикового вида -->
        <DropShadowEffect x:Key="PlasticShadow" Color="#000000" Opacity="0.1" BlurRadius="8" ShadowDepth="3"/>
        <DropShadowEffect x:Key="ButtonGlow" Color="#1976d2" Opacity="0.3" BlurRadius="15" ShadowDepth="0"/>
    </Window.Resources>

    <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="2" Effect="{StaticResource PlasticShadow}">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#ffffff" Offset="0"/>
                <GradientStop Color="#fafafa" Offset="0.3"/>
                <GradientStop Color="#f5f5f5" Offset="0.7"/>
                <GradientStop Color="#eeeeee" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ResizeGrip HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Row="1"/>

            <!-- Заголовок -->
            <Border Grid.Row="0" Background="{StaticResource SecondaryBrush}" MouseLeftButtonDown="Window_MouseLeftButtonDown" Effect="{StaticResource PlasticShadow}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Учёт дворников — Управляющая компания"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontSize="18"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"
                               Effect="{StaticResource PlasticShadow}"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                        <DatePicker x:Name="MonthPicker" SelectedDate="{Binding SelectedDate, Mode=TwoWay}" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Background="Transparent" BorderThickness="0"/>
                        <Button Content="Сегодня" Margin="10,0" Click="TodayButton_Click" Background="{StaticResource AccentBrush}" Foreground="{StaticResource TextPrimaryBrush}" BorderThickness="0" Effect="{StaticResource ButtonGlow}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                        <Button Content="🗗" Margin="5,0" Click="MinimizeButton_Click" Background="Transparent" Foreground="{StaticResource TextSecondaryBrush}" BorderThickness="0" FontSize="16" Width="30"/>
                        <Button Content="⬜" Margin="5,0" Click="MaximizeButton_Click" Background="Transparent" Foreground="{StaticResource TextSecondaryBrush}" BorderThickness="0" FontSize="16" Width="30"/>
                        <Button Content="✕" Margin="5,0" Click="CloseButton_Click" Background="Transparent" Foreground="{StaticResource TextSecondaryBrush}" BorderThickness="0" FontSize="16" Width="30"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Основная область -->
            <Grid Grid.Row="1" Margin="15,10,15,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Левая колонка: Уведомления -->
                <Border Grid.Column="0" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Effect="{StaticResource PlasticShadow}">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#ffffff" Offset="0"/>
                            <GradientStop Color="#f8f9fa" Offset="0.5"/>
                            <GradientStop Color="#e9ecef" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel>
                        <TextBlock Text="Требуется внимание" FontSize="16" FontWeight="Bold" Margin="15" Foreground="{StaticResource TextPrimaryBrush}"/>
                        <ListBox x:Name="AlertsListBox" Margin="10" Height="350" Background="Transparent" BorderThickness="0" Foreground="{StaticResource TextSecondaryBrush}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Icon}" FontSize="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding Message}" FontSize="14"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Separator Margin="10" Background="{StaticResource BorderBrush}"/>
                        <Button Content="Новая запись о работе" Margin="10" Click="NewWorkReportButton_Click" Background="{StaticResource AccentBrush}" Foreground="{StaticResource TextPrimaryBrush}" BorderThickness="0" Effect="{StaticResource ButtonGlow}"/>
                        <Button Content="Справочники" Margin="10" Click="DictionariesButton_Click" Background="{StaticResource AccentBrush}" Foreground="{StaticResource TextPrimaryBrush}" BorderThickness="0" Effect="{StaticResource ButtonGlow}"/>
                        <Button Content="Сформировать отчёт" Margin="10" Click="GenerateReportButton_Click" Background="{StaticResource AccentBrush}" Foreground="{StaticResource TextPrimaryBrush}" BorderThickness="0" Effect="{StaticResource ButtonGlow}"/>
                    </StackPanel>
                </Border>

                <!-- Разделитель -->
                <GridSplitter Grid.Column="1" Width="5" Background="{StaticResource BorderBrush}" HorizontalAlignment="Center" VerticalAlignment="Stretch" ResizeBehavior="PreviousAndNext"/>

                <!-- Центральная колонка: Мини-табель -->
                <Border Grid.Column="2" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Effect="{StaticResource PlasticShadow}">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#ffffff" Offset="0"/>
                            <GradientStop Color="#f8f9fa" Offset="0.5"/>
                            <GradientStop Color="#e9ecef" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel>
                        <TextBlock Text="{Binding WeeklyAttendanceTitle}" FontSize="16" FontWeight="Bold" Margin="15" Foreground="{StaticResource TextPrimaryBrush}"/>
                        <DataGrid x:Name="WeeklyAttendanceGrid" AutoGenerateColumns="False" Margin="10" Height="500" Background="Transparent" BorderThickness="0" Foreground="{StaticResource TextSecondaryBrush}" MouseDoubleClick="WeeklyAttendanceDataGrid_MouseDoubleClick" IsReadOnly="True" CanUserResizeColumns="True" CanUserSortColumns="True" CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Сотрудник" Binding="{Binding EmployeeName}" Width="150" CanUserSort="True"/>
                                <DataGridTextColumn Header="Пн" Binding="{Binding MondayStatus}" Width="40" CanUserSort="False"/>
                                <DataGridTextColumn Header="Вт" Binding="{Binding TuesdayStatus}" Width="40" CanUserSort="False"/>
                                <DataGridTextColumn Header="Ср" Binding="{Binding WednesdayStatus}" Width="40" CanUserSort="False"/>
                                <DataGridTextColumn Header="Чт" Binding="{Binding ThursdayStatus}" Width="40" CanUserSort="False"/>
                                <DataGridTextColumn Header="Пт" Binding="{Binding FridayStatus}" Width="40" CanUserSort="False"/>
                                <DataGridTextColumn Header="Сб" Binding="{Binding SaturdayStatus}" Width="40" CanUserSort="False"/>
                                <DataGridTextColumn Header="Вс" Binding="{Binding SundayStatus}" Width="40" CanUserSort="False"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>

                <!-- Разделитель -->
                <GridSplitter Grid.Column="3" Width="5" Background="{StaticResource BorderBrush}" HorizontalAlignment="Center" VerticalAlignment="Stretch" ResizeBehavior="PreviousAndNext"/>

                <!-- Правая колонка: Аналитика -->
                <Border Grid.Column="4" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Effect="{StaticResource PlasticShadow}">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#ffffff" Offset="0"/>
                            <GradientStop Color="#f8f9fa" Offset="0.5"/>
                            <GradientStop Color="#e9ecef" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel>
                        <TextBlock Text="Аналитика" FontSize="16" FontWeight="Bold" Margin="15" Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Выполнение по домам:" Margin="15,5,15,0" Foreground="{StaticResource TextSecondaryBrush}"/>
                        <ListBox x:Name="HousesProgressListBox" Margin="10" Height="250" Background="Transparent" BorderThickness="0" Foreground="{StaticResource TextSecondaryBrush}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Address}" FontWeight="Bold"/>
                                        <ProgressBar Value="{Binding ProgressPercentage}" Height="10" Margin="0,5" Foreground="{StaticResource SuccessBrush}" Background="{StaticResource SecondaryBrush}"/>
                                        <TextBlock Text="{Binding ProgressText}" FontSize="12"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Separator Margin="10" Background="{StaticResource BorderBrush}"/>
                        <TextBlock Text="Топ сотрудников:" Margin="15,5,15,0" Foreground="{StaticResource TextSecondaryBrush}"/>
                        <ListBox x:Name="TopEmployeesListBox" Margin="10" Height="180" Background="Transparent" BorderThickness="0" Foreground="{StaticResource TextSecondaryBrush}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayText}" FontSize="14"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>


