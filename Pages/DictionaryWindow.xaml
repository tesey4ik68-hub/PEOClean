<Window x:Class="PEOcleanWPFApp.Pages.DictionaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PEOcleanWPFApp.Pages"
        mc:Ignorable="d"
        Title="Справочники" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowState="Normal" ResizeMode="CanResize">
    <Window.Resources>
        <LinearGradientBrush x:Key="PrimaryBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#ffffff" Offset="0"/>
            <GradientStop Color="#f8f9fa" Offset="0.3"/>
            <GradientStop Color="#e9ecef" Offset="0.7"/>
            <GradientStop Color="#dee2e6" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SecondaryBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#f1f3f4" Offset="0"/>
            <GradientStop Color="#e8eaed" Offset="0.5"/>
            <GradientStop Color="#dadce0" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="AccentBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#e3f2fd" Offset="0"/>
            <GradientStop Color="#bbdefb" Offset="0.5"/>
            <GradientStop Color="#90caf9" Offset="1"/>
        </LinearGradientBrush>

        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#1976d2"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#424242"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#4caf50"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#f44336"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#bdbdbd"/>

        <DropShadowEffect x:Key="PlasticShadow" Color="#000000" Opacity="0.1" BlurRadius="8" ShadowDepth="3"/>
        <DropShadowEffect x:Key="ButtonGlow" Color="#1976d2" Opacity="0.3" BlurRadius="15" ShadowDepth="0"/>
    </Window.Resources>

    <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="2" Effect="{StaticResource PlasticShadow}">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#ffffff" Offset="0"/>
                <GradientStop Color="#fafafa" Offset="0.3"/>
                <GradientStop Color="#f5f5f5" Offset="0.7"/>
                <GradientStop Color="#eeeeee" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ResizeGrip HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Row="1"/>

            <!-- Заголовок -->
            <Border Grid.Row="0" Background="{StaticResource SecondaryBrush}" MouseLeftButtonDown="Window_MouseLeftButtonDown" Effect="{StaticResource PlasticShadow}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Справочники"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontSize="18"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"
                               Effect="{StaticResource PlasticShadow}"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                        <Button Content="🗗" Margin="5,0" Click="MinimizeButton_Click" Background="Transparent" Foreground="{StaticResource TextSecondaryBrush}" BorderThickness="0" FontSize="16" Width="30"/>
                        <Button Content="⬜" Margin="5,0" Click="MaximizeButton_Click" Background="Transparent" Foreground="{StaticResource TextSecondaryBrush}" BorderThickness="0" FontSize="16" Width="30"/>
                        <Button Content="✕" Margin="5,0" Click="CloseButton_Click" Background="Transparent" Foreground="{StaticResource TextSecondaryBrush}" BorderThickness="0" FontSize="16" Width="30"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Основная область -->
            <Grid Grid.Row="1" Margin="15,10,15,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Левая колонка: Навигация -->
                <Border Grid.Column="0" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Margin="0,0,10,0" Effect="{StaticResource PlasticShadow}">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#ffffff" Offset="0"/>
                            <GradientStop Color="#f8f9fa" Offset="0.5"/>
                            <GradientStop Color="#e9ecef" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel>
                        <TextBlock Text="Справочники" FontSize="16" FontWeight="Bold" Margin="15" Foreground="{StaticResource TextPrimaryBrush}"/>
                        <ListBox x:Name="DictionaryListBox" Margin="10" Background="Transparent" BorderThickness="0" Foreground="{StaticResource TextSecondaryBrush}" SelectionChanged="DictionaryListBox_SelectionChanged">
                            <ListBoxItem Content="Сотрудники"/>
                            <ListBoxItem Content="Адреса обслуживания"/>
                            <ListBoxItem Content="Виды работ"/>
                        </ListBox>
                    </StackPanel>
                </Border>

                <!-- Правая колонка: Содержимое -->
                <Border Grid.Column="1" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Effect="{StaticResource PlasticShadow}">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#ffffff" Offset="0"/>
                            <GradientStop Color="#f8f9fa" Offset="0.5"/>
                            <GradientStop Color="#e9ecef" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Панель инструментов -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="15,10">
                            <Button Content="Добавить" Margin="0,0,10,0" Click="AddButton_Click" Background="{StaticResource AccentBrush}" Foreground="{StaticResource TextPrimaryBrush}" BorderThickness="0" Effect="{StaticResource ButtonGlow}"/>
                            <Button Content="Редактировать" Margin="0,0,10,0" Click="EditButton_Click" Background="{StaticResource AccentBrush}" Foreground="{StaticResource TextPrimaryBrush}" BorderThickness="0" Effect="{StaticResource ButtonGlow}"/>
                            <Button Content="Удалить" Click="DeleteButton_Click" Background="{StaticResource ErrorBrush}" Foreground="White" BorderThickness="0" Effect="{StaticResource ButtonGlow}"/>
                        </StackPanel>

                        <!-- Таблица данных -->
                        <DataGrid x:Name="DataGrid" Grid.Row="1" AutoGenerateColumns="False" Margin="10" Background="Transparent" BorderThickness="0" Foreground="{StaticResource TextSecondaryBrush}" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True" CanUserResizeColumns="True" CanUserSortColumns="True">
                            <!-- Сотрудники -->
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="*"/>
                                <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="150"/>
                                <DataGridTextColumn Header="Примечания" Binding="{Binding Notes}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
